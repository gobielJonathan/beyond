{
    "include": ["src/*", "webpack/*"],
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react",
        "checkJs": false,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@beyond/webpack": [
                "./webpack"
            ],
            "@beyond/pages": [
                "./src/client/pages"
            ],
            "@beyond/component": [
                "./src/client/component"
            ],
            "@beyond/client": [
                "./src/client"
            ],
            "@beyond/server": [
                "./src/server"
            ]
        }
    }
}