{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "checkJs": false,
    "disableSizeLimit": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "./build",
    "lib": ["es5", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "dom"],
    "maxNodeModuleJsDepth": 0,
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@BUILD_ROUTE" : ["src/client/routes/index.ts"],
      "@BUILD_404": ["src/client/error/_404.tsx"],
      "@BUILD_500": [
        "src/client/error/_500.tsx"
      ],
      "@DOCUMENT" : ["src/client/_document.tsx"],
      "@APP": [
        "src/client/_app.tsx"
      ],
    },
    "typeRoots": ["src/client/@types"],
    "types": ["node"]
  },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "build",
    ]
}